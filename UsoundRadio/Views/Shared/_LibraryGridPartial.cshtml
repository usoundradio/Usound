     <div id="example" class="k-content">
                  
            <table id="grid">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Album
                        </th>
                        <th>
                            Artist
                        </th>
                        <th>
                          
                     
