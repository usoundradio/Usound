         <script id="rowTemplate" type="text/x-kendo-tmpl">
                <tr>
                  
                    <td>
                        ${ Name }
                    </td>
               
                    <td>
                        ${ Album }
                    </td>
                    
                    <td>
                        ${ Artist }
                    </td>
                    <td>
           <img src="../../Content/AlbumArt/" + ${ Artist } - ${ Album }.jpg"/>
