<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Usound Radio</title>
    <meta charset="utf-8" />
    <meta name="description" content="Built By Musicians. Driven By Listeners." />
    <!--[if IE]>
        <link rel="icon" type="image/vnd.microsoft.icon" href="@Url.Content("~/Content/images/favicon.ico")">
    <!--<![endif]-->
    <!--[if !IE]>-->
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/favicon.png")">
    <!--<![endif]-->
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/kendo.aspnetmvc.min.js"></script>
    <script src="~/Scripts/kendo.web.min.js"></script>
    <link href="~/Content/kendo.default.min.css" rel="stylesheet" />
    <link href="~/Content/kendo.common.min.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Josefin+Slab' rel='stylesheet' type='text/css'>



    <link href='http://fonts.googleapis.com/css?family=Love+Ya+Like+A+Sister' rel='stylesheet' type='text/css'>

    <script src="@Url.Content("~/Scripts/chavah.initialize.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.audiocontrol.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/pubsub.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chavah.converters.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chavah.localstorage.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chavah.song.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chavah.songrequestmanager.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chavah.collections.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chavah.songplaceholder.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chavah.dataservices.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chavah.bindinghandlers.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chavah.mainviewmodel.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/UsoundGrid.js")" type="text/javascript"></script>
    <script src="https://api.filepicker.io/v0/filepicker.js" type="text/javascript"></script>

</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <img src="~/Content/images/LogoSmall.png" /></p>
            </div>
            <div class="topaudiocontrol" style="float: left">
                <img id="playbutton" src="~/Images/RadioButtons/control_play.png" data-bind="click: playPause" />
                <img src="~/Images/RadioButtons/control_end.png" data-bind="click: nextSong" />
            </div>
            <div class="topaudiocontrol" style="float: left">
                <img src="~/Images/RadioButtons/thumb_down.png" />
                <img src="~/Images/RadioButtons/thumb_up.png" />
            </div>
            <span id="audiostatus" data-bind="text: player.mediaState"></span>
        </div>
    </header>

    <section id="main">
        <div id="body" class="background">
            <div class="topshadow" style="margin: 0 auto; width: 960px; height: 5px"></div>
            @RenderBody()
        </div
    </section>

    <footer style="margin-top: 60px">
        <div style="margin: 0 auto; width: 1024px">

            <div class="topshadow" style="width: 1024px; height: 4px"></div>
            @Html.Partial("_Footer");
             <div class="topshadow" style="width: 1024px; height: 4px"></div>
        </div>
    </footer>

    <style>
        .topaudiocontrol
        {
            margin-left: 50px;
            margin-top: 10px;
        }

            .topaudiocontrol img
            {
                margin-left: 5px;
                cursor: pointer;
            }

                .topaudiocontrol img:hover
                {
                    background-color: red;
                }
    </style>



</body>
</html>
