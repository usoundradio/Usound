@if (Request.IsAuthenticated) {
    <text>
        Hello, @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        }
    </text>
} else {
    <ul>

        <li id="loginlink"> <a  id="loginbutton"><span>Sign in</span></a> </li>
               <li id="registerlink"> <a  id="registerbutton" ><span>Register</span></a> </li>
    </ul>
}

<div id="popupoverlay"></div>
          
         <div id="tabstrippopup" >


    <ul style="padding:4px">
        <li class="k-state-active" style="width:140px; border:none">Register</li>
        <li style="width:140px">Sign In</li>
      <li  id="closepopup" style="float:right; margin-right:20px;">Close</li>
    </ul>
    <div>
       <div>@Html.Partial("_Register")</div>
    </div>
    <div>@Html.Partial("_LogOn")</div>
</div>

          <script>
              $("#tabstrippopup").kendoTabStrip({
                  animation: {
                      // fade-out current tab over 1000 milliseconds
                      close: {
                          duration: 1000,
                          effects: "fadeOut"
                      },
                      // fade-in new tab over 500 milliseconds
                      open: {
                          duration: 500,
                          effects: "fadeIn"
                      }
                  }
              });
          </script>
<script>
    $(document).ready(function () {
        $("#tabstrippopup").hide()
        $("#loginbutton").click(function () {
            $("#tabstrippopup").slideToggle()
            $("#popupoverlay").fadeToggle()
            $("#tabstrippopup li:first").css("background-color", "red")
           
        });
        $("#closepopup").click(function () {
            $("#tabstrippopup").slideToggle()
            $("#popupoverlay").fadeToggle()
          
        });
        $("#registerbutton").click(function () {
                $("#tabstrippopup").slideToggle()
                $("#tabstrippopup.k-content").slideToggle()
                $("#tabstrippopup li:last").css("background-color", "red")
                $("#popupoverlay").fadeToggle()
            
        });
        $("button:contains('Facebook')").css("background-image", "url(../../Images/facebook.png)").text("");
       
        $("button:contains('Twitter')").css("background-image", "url(../../Images/twitter.png)").text("");

        $("button:contains('Google')").css("background-image", "url(../../Images/google.png)").text("");
    });
</script>
